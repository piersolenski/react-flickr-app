{
  "name": "react-flickr-app",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": ">=4"
  },
  "lint-staged": {
    "*.{js, scss}": [
      "prettier-eslint --write",
      "git add"
    ]
  },
  "dependencies": {
    "@neverbland/react-scripts": "latest",
    "classnames": "^2.2.5",
    "date-fns": "^1.29.0",
    "fetch-jsonp": "^1.1.3",
    "normalize.css": "^4.2.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-router-dom": "^4.2.2"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "lint:js": "eslint src/js/**/*.js",
    "lint:scss": "sass-lint 'src/css/**/*.scss' -v -q",
    "precommit": "lint-staged",
    "svg:pretty": "find src/images -name '*.svg' -type f -exec svgo --pretty --indent=2 '{}' \\;"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "sasslintConfig": "./node_modules/@neverbland/react-scripts/config/sasslint.yml",
  "devDependencies": {
    "husky": "^0.14.3",
    "lint-staged": "^6.0.0",
    "prettier": "^1.9.2"
  }
}
